})  
})

$(document).ready(function () {
 
window.setTimeout(function() {
    $(".pad.margin.no-print").fadeTo(500, 0).slideUp(500, function(){
        $(this).remove(); 
    });
}, 3000);
 
});
</script>

</body>
</html>
