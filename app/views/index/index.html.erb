<style>
.recommend_box{margin-top: 5px;}
.recommend_box .name{line-height: 30px; margin-top: 10px; font-size: 16px; font-weight: bold;}
.recommend_box .price{line-height: 30px; margin-top: 10px; color: red; float: right; font-size: 16px; font-weight: bold;}
</style>

<div style="display:block;" class="menu_header">
	<div class="menu_topbar">
		<div class="sort sort_on" id="menu">
			<a href="">分尼湾</a>
		</div>
		<a href="javascript:showMenu();" class="head_btn_right"><i class="menu_header_home"></i> </a>
	</div>
</div>

<!-- Swiper -->
<div class="swiper-container" style="width:100%;">
	<div class="swiper-wrapper" style='height:251px;'>
    <%Banner.all.each do |banner|%>
		  <div class="swiper-slide"><a href="<%= banner.url%>"><img style="width:100%;" src='<%= banner.image.url%>' alt="<%= banner.description%>"></a></div>
    <%end%>
  </div>
	<div class="swiper-pagination"></div>
</div>

<%Product.where(recommend: true).each do |product|%>
<div class="recommend_box">
  <a href="<%= product_path(product)%>">
    <img src="<%= product.logo.url%>" width="100%" height="300"/><br />
    <span class="name"><%= product.name%></span>
    <span class="price"><%= product.price%></span>
  </a>
</div>
<%end%>

<script>
$(function() {
	var swiper = new Swiper('.swiper-container', {
		pagination: '.swiper-pagination',
		paginationClickable: true,
		spaceBetween: 30,
		centeredSlides: true,
		autoplay:2500,
		speed:300,
		autoplayDisableOnInteraction: false
	});

	$(function(){
		var height = $('.swiper-slide img:eq(0)').height();
		if(height<=0){height=320;}
		$('.swiper-wrapper').css('height', height);
	})
});
</script>