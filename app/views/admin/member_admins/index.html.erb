<div class="row">
	<div class="col-xs-12">
		<div class="box">
			<div class="box-header">
				<h3 class="box-title">账户列表</h3>
				<div class="box-tools">
					<div class="input-group">
						<input type="text" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="查找">
						<div class="input-group-btn">
							<button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
						</div>
					</div>
				</div>
			</div> 
			<div class="box-body table-responsive no-padding">
				<table class="table table-hover">
					<tbody>
					<tr>
						<th>ID</th>
						<th>邮箱</th>
						<th>姓名</th>
						<th>角色</th>
						<th>登录次数</th>
						<th>最后登录时间</th>
						<th>操作</th>
					</tr>
					<% @admins.each do | admin | %>
					<tr>
						<td><%= admin.id %></td>
						<td><%= admin.email %></td>
						<td><%= admin.name %></td>
						<td>
							<% admin.roles.each do | role |%>
							<span class="label label-success <%='margin' if admin.roles.first!=role %>"><%= role.name %></span>
							<% end %>
						</td>
						<td><%= admin.sign_in_count %></td>
						<td><%= admin.last_sign_in_at.present? ? admin.last_sign_in_at.strftime("%Y-%m-%d %H:%M") : '从未登陆过' %></td>
						<td>
							<%= link_to "编辑", edit_admin_member_admin_path(admin)%>
						</td>
					</tr>
					<% end %>
				</tbody></table>
			</div>
			<div class="box-footer">
				<%= link_to '创建账户', new_admin_member_admin_path, class: 'btn btn-primary btn-sm margin' %>
			</div> 
		</div> 
	</div>
</div>