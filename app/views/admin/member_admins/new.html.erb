<%@page_title="添加员工"%>

<style type="text/css" media="screen">
  .role_name{font-size: 16px; font-weight: bold;}
  .per_name{display: inline-block; color: #AAAAAA;}
</style>
<div class="row">
  <div class="col-md-12">

    <div class="nav-tabs-custom">
      <div class="tab-content">
        <div class="tab-pane active">
          <%= form_for @admin, url:  admin_member_admins_path, :html=>{:multipart=>true} do |f| %>
            <div class="form-group">
              <label for="exampleInputEmail1">Email</label>
              <%= f.text_field :email, class: 'form-control'%>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">姓名</label>
                <%= f.text_field :name, class: 'form-control'%>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">密码<span style="color: green"></span></label>
                  <%= f.text_field :password, class: 'form-control' %>
                  </div>
                  <% if @roles.size>1 %>
                    <div class="form-group">
                      <label for="col-md-2">角色</label><br>
                      <% @roles.each do |role|%>
                        <% next if role.name==Role::ROLE_MANAGER %>
                        <label class="role_name"><%= check_box_tag 'role_ids[]', role.id%><%= role.name%></label>
                      <%end%>
                    </div>
                  <% end %>
                  <%= f.submit '保存' %>
                <% end %>
              </div> 

            </div> 
          </div> 
        </div>
      </div>