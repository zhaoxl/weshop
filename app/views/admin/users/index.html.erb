<%@page_title ||= "用户管理"%>

<style type="text/css" media="screen">
.table > tbody > tr > td{vertical-align: middle;}
.check_box{float: left; }
.img_box{text-align: center; line-height: 83px}
.inline_label{float: left; margin: 7px auto auto -18px;}
.input_label{}
.img-thumbnail{width: 50%;}	
.filter .col-sm-05{
	width: 4.166665%; 
	float: left;
	min-height: 1px;
  padding-left: 15px;
  padding-right: 0px;
	padding-top: 7px;
  position: relative;
}
.filter .col-sm-07{
	width: 5.833330%;
	float: left;
	min-height: 1px;
  padding-left: 15px;
  padding-right: 0px;
	padding-top: 7px;
  position: relative;
}
.filter div[class^='col-xs-']{padding-left: 0px;}
</style>

	<div class="row">
		<div class="col-xs-12">			
			<div class="box box-primary">
				<div class="box-body pad table-responsive">
					<div>
						<table class="table table-hover users_table">
							<tbody>
								<tr>
									<th><label><input type="checkbox" />全选</label></th>
									<th>用户名</th>
									<th>分销</th>
									<th>订单数</th>
									<th>操作</th>
								</tr>
								<%@users.each do |user|%>
								<tr>
									<td>
										<div class="row show-grid">
											<div class="col-md-3 img_box">
												<div class="check_box">
													<input type="checkbox" name="user[]id" value="<%= user.id%>">
												</div>
											</div>
										</div>
									</td>
									<td><%= user.try(:name)%></td>
									<td><%= user.is_distribution? ? "V#{user.distribution.level}" : '否'%></td>
									<td><%= user.orders.count%></td>
									<td>
										<a href="<%= admin_orders_path(user_id: user.id)%>">订单</a>
										<%if user.is_distribution?%>
											<a href="<%= edit_admin_distribution_path(user.distribution.id)%>">分销</a>
										<%end%>
									</td>
								</tr>
								<%end%>
							</tbody>
						</table>
						<div style="margin-left: 10px">
							<%= paginate @users, :theme => 'twitter-bootstrap-3' %>
						</div>
					</div>
				</div> 
			</div>
		</div>
	</div>

<script type="text/javascript">
$(function(){
	$("#filter_form input").change(function(){
		$("#filter_form").submit();
	});
	$("#filter_form input").keydown(function(e){
		if(e.keyCode == 13){
			$("#filter_form").submit();
		}
	}); 
});
</script>
















