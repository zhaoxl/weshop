<%= form_for [:admin, category], :html=>{:multipart=>true} do |f| %>
<table class="j_table2">
	<tr>
		<td class="tit">上级分类</td>
		<td>
			<%= f.select :parent_id, ProductCategory.roots.map{|c| [c.name, c.id]}.unshift(['无', nil])  %>
		</td>
	</tr>
	<tr>
		<td class="tit">分类名称</td>
		<td><%= f.text_field :name%></td>
	</tr>
	<%unless category.new_record?%>
	<tr>
		<td class="tit">显示顺序</td>
		<td><%= f.text_field :position %></td>
	</tr>
	<%end%>
</table>
<%= f.submit '保存' %>
<% end %>