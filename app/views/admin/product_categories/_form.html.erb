<%= form_for [:admin, category], :html=>{:multipart=>true} do |f| %>
	<div class="box-body">
		<div class="form-group">
			<label for="exampleInputEmail1">上级分类</label>
			<%= f.select :parent_id, ProductCategory.roots.map{|c| [c.name, c.id]}.unshift(['无', nil]), {}, class: 'form-control' %>
		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">分类名称</label>
			<%= f.text_field :name, class: 'form-control'%>
		</div>
		<%unless category.new_record?%>
		<div class="form-group">
			<label for="exampleInputPassword1">显示顺序</label>
			<%= f.text_field :position, class: 'form-control' %>
		</div>
		<%end%>
	</div>
	<div class="box-footer">
		<button class="btn btn-primary" type="submit">保存</button>
	</div>
<% end %>

