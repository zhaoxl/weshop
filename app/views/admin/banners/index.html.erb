<%@page_title ||= "Banner管理"%>

<div class="row">
	<div class="col-xs-12">			
		<div class="box box-primary">
			<div class="box-body pad table-responsive">
				<div>
					<table class="table table-hover orders_table">
						<tbody>
							<tr>
								<th><label><input type="checkbox" />全选</label></th>
								<th>标题</th>
								<th>描述</th>
								<th>图标</th>
								<th>显示顺序</th>
								<th>操作</th>
							</tr>
							<%@banners.each do |banner|%>
							<tr>
								<td>
									<div class="row show-grid">
										<div class="col-md-3 img_box">
											<div class="check_box">
												<input type="checkbox" name="banner[]id" value="<%= banner.id%>">
											</div>
										</div>
									</div>
								</td>
								<td><%= banner.title%></td>
								<td><%= banner.description%></td>
								<td>
										<img src="<%= banner.image.url%>" width="50" height="50">
								</td>
								<td><%= banner.position%></td>
								<td>
									<a href="<%= edit_admin_banner_path(banner)%>">编辑</a>
									<a href="<%= move_up_admin_banner_path(banner)%>">上移</a>
									<a href="<%= move_down_admin_banner_path(banner)%>">下移</a>
									<%= link_to '删除', admin_banner_path(banner), :confirm => '确定要删除图片吗?', :method => :delete %></td>
								</td>
							</tr>
							<%end%>
						</tbody>
					</table>
				</div>
				<a href="<%= new_admin_banner_path%>" class="btn btn-default">添加图片</a>
			</div> 
		</div>
	</div>
</div>






















