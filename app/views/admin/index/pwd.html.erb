<%@page_title="修改密码"%>

<style type="text/css" media="screen">
  .role_name{font-size: 16px; font-weight: bold;}
  .per_name{display: inline-block; color: #AAAAAA;}
</style>
<div class="row">
  <div class="col-md-12">
    <div class="nav-tabs-custom">
      <div class="tab-content">
        <div class="tab-pane active">
          <%= form_for current_admin, url: pwd_save_admin_index_index_path, method: :post, :html=>{:multipart=>true} do |f| %>
            <div class="form-group">
              <label for="exampleInputEmail1">原密码</label>
              <%= text_field_tag :password_old, nil, class: 'form-control' %>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">新密码</label>
              <%= text_field_tag :password, nil, class: 'form-control' %>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">确认密码</label>
              <%= text_field_tag :password_confirm, nil, class: 'form-control' %>
            </div>
          	<%= f.submit '保存' %>
          <% end %>
				</div>
			</div>
		</div>
	</div>
</div>