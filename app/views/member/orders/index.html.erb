<h1>我的订单</h1>
<br><br>

<%@orders.each do |order|%>
  <table>
    <tr>
      <td>
        订单号：<%= order.scode%>
      </td>
    </tr>
    <tr>
      <td>
        <%order.order_products.each do |op|%>
          <table>
            <tr>
              <td>
                <img src="<%= op.logo.url%>" width="100" height="100" />
              </td>
              <td>
                <%= op.name%><br />
                <%= op.price%> x <%= op.total%> = <%= op.price*op.total%>
              </td>
            </tr>
          </table>
        <%end%>
      </td>
    </tr>
    <tr>
      <td>
        状态：<%= t "active_record.order.states.#{order.state}"%>&nbsp;&nbsp;总金额：<%= order.total_fee%>元
      </td>
    </tr>
    <tr>
      <td>
        <%if order.cancel?%>
          <a href="<%= delete_member_order_path(order)%>">删除订单</a>
        <%elsif order.create?%>
          <a href="#">立即支付</a>
          <a href="<%= set_state_member_order_path(order, state: :cancel)%>">取消订单</a>
        <%elsif order.payment?%>
          
        <%elsif order.sent?%>
          <a href="#">确认收货</a>
        <%end%>
      </td>
    </tr>
  </table><br /><br />
<%end%>

