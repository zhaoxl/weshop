<h1>我的订单</h1>
<br><br>

<%@orders.each do |order|%>
  <table>
    <tr>
      <td>
        订单号：<%= order.scode%>
      </td>
    </tr>
    <tr>
      <td>
        <%order.order_products.each do |op|%>
          <table>
            <tr>
              <td>
                <img src="<%= op.logo.url%>" width="100" height="100" />
              </td>
              <td>
                <%= op.name%><br />
                <%= op.price%> x <%= op.total%> = <%= op.price*op.total%>
              </td>
            </tr>
          </table>
        <%end%>
      </td>
    </tr>
    <tr>
      <td>
        状态：<%= order.state%>
      </td>
    </tr>
    <tr>
      <td>
        <a href="#">立即支付</a>
      </td>
    </tr>
  </table>
<%end%>

