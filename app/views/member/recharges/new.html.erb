<%@title = params[:title]||"微信充值"%>
<style type="text/css" media="screen">
body{background: #E6E6E6;}
p{margin: 0px; padding: 0px;}
input[type="text"]{border: none; border-left: solid 2px #E1E1E1;}
.form{padding-left: 12px; background: white;}
.form .line{width: 100%; line-height: 42px; border-bottom: solid 1px #F8F8F8;}
.price{color: red;}
.float_bottom_btn{width: 100%; line-height: 43px; border-top: solid 1px #BBBBBB; border-bottom: solid 1px #BBBBBB; background: #82B770; text-align: center; font-size: 15px; font-weight: bold; color: white; display: block; position: absolute; bottom: 0px;}
</style>

<%= form_tag member_recharges_path do %>
<div class="form">
  <div class="line">
    <p>可用金额：<span class="price">￥<%= current_user.balance%></span></p>
  </div>
  <div class="line">
    <p>充值金额：<input type="text" placeholder="请输入充值金额" name="amount" /></p>
  </div>
</div>

<input type="submit" class="float_bottom_btn" value="确认充值" />
<%end%>

<%if flash[:notice]%>
  <script type="text/javascript">
    alert('<%= flash[:notice]%>');
  </script>
<%end%>

<script type="text/javascript">
//禁止回车事件响应
 $(this).keydown( function(e) {
  var key = window.event?e.keyCode:e.which;
  //alert(key.toString());
  if(key.toString() == "13"){
    return false;
  }
});
</script>